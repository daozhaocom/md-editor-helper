    },
    {
        "prefix": "listUnsorted", 
        "body": ["- $1"],
        "type": ["command", "submenu"],
        "title": "MEH listUnsorted",
        "description": "无序列表"
    },
    {
        "prefix": "listSorted", 
        "body": ["1. $1"],
        "type": ["command", "submenu"],
        "title": "MEH listSorted",
        "description": "有序列表"
